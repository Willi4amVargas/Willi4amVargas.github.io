<p class="flex items-center justify-center gap-2 mt-10 md:mt-0 transition-all ease-in-out">
  <button class="tooltip group relative" id="copyToClipboardBtn">
    info@widvu.com
    <span class="tooltiptext" id="tootipEmailCopied">
      Email copied in clipboard
    </span>
  </button>
</p>

<script>
  const copyButton = document.getElementById("copyToClipboardBtn");
  if (copyButton) {
    copyButton.addEventListener("click", () => {
      navigator.clipboard.writeText("info@widvu.com");

      const tooltip = document.getElementById("tootipEmailCopied");
      if (tooltip) {
        tooltip.classList.add("tooltip-visible");
        setTimeout(() => {
          tooltip.classList.remove("tooltip-visible");
        }, 2000);
      }
    });
  }
</script>

<style>
  .tooltip {
    position: relative;
    display: inline-flex;
    align-items: center;
    cursor: pointer;
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    transition: background-color 0.2s;
  }
  .tooltip:hover {
    background-color: rgba(255, 255, 255, 0.1);
  }

  .tooltip .tooltiptext {
    position: absolute;
    visibility: hidden;
    opacity: 0;
    text-align: center;
    background-color: rgb(255, 255, 255);
    color: #000000;
    padding: 0.5rem 1rem;
    border-radius: 0.375rem;
    width: max-content;
    max-width: 200px;
    z-index: 50;
    transition: all 0.2s ease;
    font-size: 0.875rem;
    box-shadow:
      0 4px 6px -1px rgba(0, 0, 0, 0.1),
      0 2px 4px -1px rgba(0, 0, 0, 0.06);
  }

  .tooltip .tooltiptext {
    top: 100%;
    left: 50%;
    transform: translateX(-50%) translateY(0.5rem);
  }

  @media (min-width: 640px) {
    .tooltip .tooltiptext {
      bottom: auto;
      top: 50%;
      left: 100%;
      transform: translateX(0.5rem) translateY(-50%);
    }
  }

  .tooltip-visible {
    visibility: visible !important;
    opacity: 1 !important;
