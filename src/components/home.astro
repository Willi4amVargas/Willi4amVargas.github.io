<style>
  .gif-container {
    margin: 0;
    mix-blend-mode: multiply;
    filter: contrast(1.5) brightness(1.2);
  }

  a > img {
    filter: invert(1);
  }
  /* MÃ¡quina de escribir */
  @keyframes typewriter {
    from {
      width: 0;
    }
    to {
      width: 32ch;
    }
  }

  @keyframes blink {
    50% {
      border-right-color: transparent;
    }
  }

  .write-machine {
    display: inline-block;
    overflow: hidden;
    border-right: 2px solid white;
    white-space: nowrap;
    animation:
      typewriter 4s steps(43) forwards,
      blink 0.75s infinite;
  }
</style>
